<script>
const form = document.getElementById('menuForm');
const totalEl = document.getElementById('total');
const pagarBtn = document.getElementById('pagarBtn');

form.addEventListener('input', () => {
  let total = 0;
  total += parseFloat(form.batido_guayaba.value)*3.5;
  total += parseFloat(form.batido_mamey.value)*3.5;
  total += parseFloat(form.batido_mango.value)*3.5;
  total += parseInt(form.bolitas_5.value)*4;
  total += parseInt(form.bolitas_8.value)*6;
  total += parseInt(form.bolitas_16.value)*12;
  total += parseInt(form.pizza_jamon.value)*10;
  total += parseInt(form.pizza_hawaiana.value)*10;
  total += parseInt(form.pizza_napolitana.value)*7;
  total += parseInt(form.ensalada_tradicional.value)*5;
  total += parseInt(form.ensalada_especial.value)*12;
  totalEl.textContent = total.toFixed(2);
});

pagarBtn.addEventListener('click', () => {
  window.open('https://forms.gle/FXMAQSvVavPwHp7t7', '_blank');
});
</script>
